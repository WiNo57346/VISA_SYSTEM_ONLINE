@model VISA_SYSTEM_ONLINE.Models.VISA_User_Login


@{
    Layout = null;
}

<!DOCTYPE html>

<html>


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <meta charset="utf-8">
    @*<meta http-equiv="X-UA-Compatible" content="IE=edge">*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    @*<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">*@
    <!-- Custom styles for this template-->
    <link href="~/theme/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/DatePicker/css/datepicker.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        .bg-new-login {
            background-image: url('../../pic/pic_login.jpg');
               background-position: center;
    background-size: cover;
        }






    </style>


</head>
<body class="bg-gradient-warning">


@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

     @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
  


    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-new-login ">                               
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">VISA SYSTEM ONLINE</h1>
                                    </div>

                                    <form class="user">
                                        <div class="form-group">


                                            @Html.TextBoxFor(a => a.Opno, new { @id = "TB_ID", @class = "form-control form-control-user ", @placeholder = "Enter OPNO..." })

                                        </div>
                                      
                                        <div class="form-group">
                               
                                           @Html.PasswordFor(a => a.Password, new { @id = "TB_Password", @class = "form-control form-control-user ", @placeholder = "Password" })  
                                    
                                        
                                         </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">

                                                <input type="checkbox" class="custom-control-input" id="customCheck">

                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>
                                        </div>
                                  
                                        @*<button class="btn btn-primary btn-user btn-block">
                                            LOGIN
                                        </button>*@
                                        <input type="submit" value="Login" class="btn btn-primary btn-user btn-block" />              
                                    </form>

                                    <hr>
                             
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

 

    <script src="~/SweetAlert/sweetalert2.all.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/theme/vendor/jquery/jquery.min.js"></script>
    <script src="~/theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/theme/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/theme/js/sb-admin-2.min.js"></script>
    <script src="~/DatePicker/js/datepicker.js"></script>

    @if (@ViewBag.Message != null)
    {
     
        <script>

            Swal.fire({
                type: 'error',
                title: 'Oops...',
                text: ('@ViewBag.Message'),
            })

        </script>
   


    }
</body>
</html>
